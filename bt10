#include <stdio.h>
void xoaPhanTu(int arr[], int *n, int vi_tri) {
    if (vi_tri < 0 || vi_tri >= *n) {
        printf("Vi tri xoa khong hop le\n");
        return;
    }
    for (int i = vi_tri; i < *n - 1; i++) {
        arr[i] = arr[i + 1];
    }
    (*n)--;
}
void inMang(int arr[], int n) {
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}

int main() {
    int mang[6] = {10, 20, 30, 40, 50, 60};
    int n = 6;
    int vi_tri_can_xoa = 2;

    printf("Mang ban dau: ");
    inMang(mang, n);

    xoaPhanTu(mang, &n, vi_tri_can_xoa);

    printf("Mang sau khi xoa phan tu o vi tri %d: ", vi_tri_can_xoa);
    inMang(mang, n);

    return 0;
}
