#include <stdio.h>
void capNhatPhanTu(int arr[], int giaTriMoi, int viTri) {
    if (viTri >= 0) {
        arr[viTri] = giaTriMoi;
    }
}

int main() {
    int mang[5] = {10, 20, 30, 40, 50};
    int kichThuoc = 5;
    
    printf("Mang ban dau: ");
    for (int i = 0; i < kichThuoc; i++) {
        printf("%d ", mang[i]);
    }
    printf("\n");

    int giaTriMoi = 35;
    int viTriCanCapNhat = 2;
    capNhatPhanTu(mang, giaTriMoi, viTriCanCapNhat);

    printf("Mang sau khi cap nhat tai vi tri %d: ", viTriCanCapNhat);
    for (int i = 0; i < kichThuoc; i++) {
        printf("%d ", mang[i]);
    }
    printf("\n");

    return 0;
}
